{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "node",
    "import",
    "promise",
    "@typescript-eslint",
    "prettier",
    "security"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "semi": ["error", "always"],
    "no-undef": "warn",
    "no-unused-vars": "warn",
    "@typescript-eslint/no-unused-vars": "warn",
    "quotes": [2, "single", { "avoidEscape": true }],
    "indent": ["error", 2],
    "import/extensions": ["off"],
    "import/prefer-default-export": ["off"],
    "no-shadow": "warn"
  }
}